<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imgPersonAttendancePhoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/no_photo"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Petr Lachtan"
        android:id="@+id/txtPersonAttendanceName"
        android:layout_alignTop="@+id/imgPersonAttendancePhoto"
        android:layout_toRightOf="@+id/imgPersonAttendancePhoto"
        android:layout_toEndOf="@+id/imgPersonAttendancePhoto"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Operations Leader"
        android:id="@+id/txtPersonAttendanceRole"
        android:layout_below="@+id/txtPersonAttendanceName"
        android:layout_alignLeft="@+id/txtPersonAttendanceName"
        android:layout_alignStart="@+id/txtPersonAttendanceName"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="External"
        android:id="@+id/txtPersonAttendanceExternal"
        android:layout_alignBottom="@+id/imgPersonAttendancePhoto"
        android:layout_alignLeft="@+id/txtPersonAttendanceRole"
        android:layout_alignStart="@+id/txtPersonAttendanceRole" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Date"
        android:id="@+id/btnPersonAttendance"
        style="@android:style/Holo.Light.ButtonBar"
        android:layout_below="@+id/txtPersonAttendanceExternal"
        android:layout_alignLeft="@+id/imgPersonAttendancePhoto"
        android:layout_alignStart="@+id/imgPersonAttendancePhoto"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Report for 22.05.2016"
        android:id="@+id/txtPersonAttendanceReportFor"
        android:layout_alignBottom="@+id/btnPersonAttendance"
        android:layout_toRightOf="@+id/imgPersonAttendancePhoto"
        android:layout_toEndOf="@+id/imgPersonAttendancePhoto" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView4"
        android:layout_below="@+id/txtPersonAttendanceReportFor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>